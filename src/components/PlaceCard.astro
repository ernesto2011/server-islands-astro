---
import type { Place } from "@prisma/client";
import Star from "./Star.astro";
import { Image } from "astro:assets";

interface Props {
	place: Place
}
const {place}= Astro.props
const imageUrl =`/assets/images/${place.image}`
---

	<div class="shadow-md rounded-lg max-w-sm bg-gray-700 border-gray-700">
		<a href={`/place/${place.id}`}>
			<Image class="pb-5 rounded-lg overflow-hidden" src={imageUrl} alt="title" width='500' height='500'/>
        </a>
			<div class="px-5 pb-5">
				<h3 class=" font-semibold text-xl tracking-tight text-white">{place.title}</h3>
				<div class="flex items-center mt-2.5 mb-5">
                    <div class="flex flex-1">
                        <Star rating={place.avg_rating}/>
                    </div>
					<span class="text-xs font-semibold mr-2 px-2.5 py-0.5 rounded bg-blue-200 text-blue-800 ml-3">{place.avg_rating}</span>
				</div>
				
			</div>
	</div>