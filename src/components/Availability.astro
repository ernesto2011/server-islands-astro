---
import { actions } from 'astro:actions';

interface Props{
    placeId: string
}
const {placeId} = Astro.props;
const {data} = await Astro.callAction(actions.getAvailabilityById,placeId)
if(!data){
    throw new Error("no data return from action => getAvailabilityById")
}
const {isAvailability, message} = data
---
 {
    isAvailability ? (
        <p class="bg-blue-400 mt-5 text-center text-white font-bold rounded-xl p-2">{message}</p>

    ) :(
        <p class="bg-red-400 mt-5 text-center text-white font-bold rounded-xl p-2">{message}</p>
    )
 }
